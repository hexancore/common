{
  "name": "@hexancore/common",
  "version": "0.11.0",
  "engines": {
    "node": ">=18"
  },
  "engine-strict": true,
  "description": "Core to build hexagonal architecture designed apps",
  "author": "Andrzej Wasiak <Mararok>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./lib/index.d.ts"
      ],
      "testutil": [
        "./lib/Test/index.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "default": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      }
    },
    "./testutil": {
      "import": {
        "types": "./lib/Test/index.d.ts",
        "default": "./lib/Test/index.js"
      },
      "default": {
        "types": "./lib/Test/index.d.ts",
        "default": "./lib/Test/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexancore/common.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://hexancore.github.io/hexancore",
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=50%",
    "test:clearCache": "jest --clearCache",
    "test:unit": "jest --maxWorkers=50% --group=unit",
    "test:watch": "jest --maxWorkers=50% --watchAll",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepublish": "yarn test && yarn run build"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "class-transformer": "^0.5.1",
    "fastest-validator": "^1.11.1",
    "lambda-log": "^3.1.0",
    "luxon": "^3.0.1",
    "nanoid": "^3.1.28",
    "string.prototype.matchall": "^4.0.10",
    "tslib": "^2.5.0",
    "xss": "^1.0.10"
  },
  "devDependencies": {
    "@hexancore/mocker": "*",
    "@types/jest": "29.0.*",
    "@types/lambda-log": "^3.0.0",
    "@types/luxon": "^3.3.2",
    "@types/node": "^18.0",
    "@types/string.prototype.matchall": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.3.0",
    "jest": "29.0.*",
    "jest-docblock": "29.0.*",
    "jest-runner": "29.0.*",
    "jest-runner-groups": "^2.1.0",
    "reflect-metadata": "0.1.13",
    "ts-jest": "29.0.*",
    "typescript": "4.9.5"
  },
  "jest": {
    "preset": "ts-jest",
    "runner": "groups",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@$": "<rootDir>/src",
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "<rootDir>/test/unit/**/*.test.ts",
      "<rootDir>/test/integration/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/config.ts"
    ],
    "coverageDirectory": "./test/coverage",
    "testEnvironment": "node"
  },
  "bugs": {
    "url": "https://github.com/hexancore/common/issues"
  },
  "directories": {
    "lib": "lib"
  }
}
